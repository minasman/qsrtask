<%= form_with(model: store, local: true) do |f| %>
    <div class="form-group">
        <%= f.label :name, "Restaurant Name" %>
            <%= f.text_field :name, class: "form-control", required: "true" %>
    </div>
    <div class="form-group">
        <%= f.label :name, "Restaurant Number" %>
            <%= f.text_field :store_number, class: "form-control", required: "true" %>
    </div>
    <div class="form-group">
        <%= f.label :store_type, "Restaurant Type" %>
            <%= f.select :store_type, Store::STORE_TYPE, class: "form-control", required: "true" %>
    </div>
    <div class="form-group">
        <%= f.label :gm_id, "Restaurant GM" %>
            <%= f.collection_select(:gm_id, User.all, :id, :full_name ) %>
    </div>
    <div class="form-group">
        <%= f.label :name, "Restaurant Email" %>
            <%= f.text_field :store_email, class: "form-control", required: "true" %>
    </div>
    <div class="form-group">
        <%= f.label :name, "Street Address" %>
            <%= f.text_field :street_address, class: "form-control", required: "true" %>
    </div>
    <div class="form-group">
        <%= f.label :name, "City" %>
            <%= f.text_field :city, class: "form-control", required: "true" %>
    </div>
    <div class="form-group">
        <%= f.label :name, "state" %>
            <%= f.text_field :state, class: "form-control", required: "true" %>
    </div>
    <div class="form-group">
        <%= f.label :name, "Zip Code" %>
            <%= f.text_field :zip_code, class: "form-control", required: "true" %>
    </div>
    <div class="form-group">
        <%= f.label :name, "Phone Number" %>
            <%= f.text_field :phone, class: "form-control", required: "true" %>
    </div>
  <% if store.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(store.errors.count, "error") %> prohibited this store from being saved:</h2>

      <ul>
      <% store.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
